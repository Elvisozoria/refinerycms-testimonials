<% content_for :body_content_title do %>
  <%= @testimonial.byline %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Quote</h1>
    <p>
      <%=raw @testimonial.quote %>
    </p>
  </section>
  <section>
    <h1>Byline</h1>
    <p>
      <%=raw @testimonial.byline %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="testimonials">
      <% @testimonials.each do |testimonial| %>
        <li>
          <%= link_to testimonial.byline, refinery.testimonials_testimonial_path(testimonial) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
