<%= form_for [refinery, :testimonials_admin, @testimonial] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @testimonial,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :quote -%>
    <%= f.text_field :quote, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :byline -%>
    <%= f.text_field :byline -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.testimonials.admin.testimonials.testimonial'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @testimonial.quote),
             cancel_url: refinery.testimonials_admin_testimonials_path -%>
<% end -%>
