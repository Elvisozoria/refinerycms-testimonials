<% header = tag.h3 "Select testimonials to be shown on this page", class: :highlight

   no_testimonials = 'No testimonials'
   testimonial_collection = collection_select :page, :testimonial_ids,
                                              @testimonials,
                                              :id,
                                              :name,
                                              { multiple: true }
   selection = testimonials.present? ? testimonial_collection : no_testimonials
   content = tag.div header << selection, class: 'wym_skin_refinery page_part', id: 'page_testimonial_selector'
%>
<section class="testimonials" >
  <%= content %>
</section >

