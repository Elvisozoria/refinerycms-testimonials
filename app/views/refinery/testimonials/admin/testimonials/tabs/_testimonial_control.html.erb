<div class='wym_skin_refinery page_part' id='page_testimonial_control' >

  <div class='field enable' id="testimonials_show" >
    <span class='label_with_help' >
      <%= f.label :testimonials_show?, t('.testimonials_show') %>
      <%= refinery_help_tag t('.testimonials_show_help') %>
    </span >
    <%= f.check_box :testimonials_show, {}, "true", "false" %>
    <%= f.label :testimonials_show, t('.testimonials_show_label'), :class => 'stripped' %>
  </div >

  <div class='fields' >
    <fieldset id="count" >
      <legend >How Many?</legend >
      <div class="field_group" >
        <div class='label_with_help' >
          <%= radio_button_tag(:count, "All") %>
          <%= label_tag :count_all, t(".testimonials_count_options_all") %>
        </div >
        <div class='label_with_help' >
          <%= radio_button_tag(:count, "Some") %>
          <%= label_tag(:count_some, t(".testimonials_count_options_some")) %>
        </div >
        <div class="label_with_help" id="set_number_field" >
          <%= f.text_field :testimonials_count, pattern: "[0-9]*",
                           title: "Numbers only please. To get all testimonials select 'All' in the field above this." %>
        </div >
      </div >
    </fieldset >

    <fieldset id="select" >
      <legend >What order?</legend >

      <div class="field_group" >
        <div class='label_with_help' >
          <%= f.radio_button :testimonials_select, 'Recent' %>
          <%= f.label :testimonials_select, 'By date (Recent first)', :value => 'Recent', :class => 'stripped' %>
        </div >
        <div class='label_with_help' >
          <%= f.radio_button :testimonials_select, 'Random' %>
          <%= f.label :testimonials_select, 'Random', :value => 'Random', :class => 'stripped' %>
        </div >
      </div >
    </fieldset >

    <fieldset id="format" >
      <legend >Full Testimonials or Extracts?</legend >
      <div class="field_group" >
        <div class='label_with_help' >
          <%= f.radio_button :testimonials_format, 'Full' %>
          <%= f.label :testimonials_format, 'Complete Testimonials', :value => 'Full', :class => 'stripped' %>
        </div >
        <div class='label_with_help' >
          <%= f.radio_button :testimonials_format, 'Extract' %>
          <%= f.label :testimonials_format, 'Extracts', :value => 'Extract', :class => 'stripped' %>
        </div >
      </div >
    </fieldset >
  </div >
</div >
